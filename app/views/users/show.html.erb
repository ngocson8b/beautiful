<h3><%=@user.email%></h3>
<h4><%= @user_posts.size  %> posts</h4>	
<h4><%=@user.followers.size%> followers | <%=@user.following.size%> followings</h4>

<% if @user.id == current_user.id%>
	<%= link_to "Edit profile", edit_user_registration_path(@user), class: "btn btn-default" %>
<% end %>
<div class = "row">
<% unless @user.id == current_user.id %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>
    

<% @user_posts.each do |x| %>
    <div class="test col-md-4">
        <%= link_to image_tag(x.image.url(:medium), alt: "image", class: "img-responsive"), post_path(x) %>
    </div>
<% end %>
</div>